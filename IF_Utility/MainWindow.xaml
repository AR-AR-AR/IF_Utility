<Window x:Name="window" x:Class="IF_Utility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IF_Utility"
        mc:Ignorable="d"
        Title="MainWindow" Height="457.25" Width="1025.75" Loaded="PageLoaded">
    <Canvas x:Name="MainCanvas" Margin="260,62,658,0" VerticalAlignment="Top">
        <Canvas x:Name="ConnectedCanvas" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=window, Mode=OneWay}" >
            <local:FMS x:Name="FMSControl" HorizontalAlignment="Left" VerticalAlignment="Top" Width="637" Canvas.Left="-257" Canvas.Top="-60" />
        </Canvas>
        <Canvas x:Name="UnConnectedCanvas" Cursor="Wait" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=window, Mode=OneWay}" Canvas.Left="-259" Canvas.Top="-58" Visibility="Collapsed">
            <Canvas.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
            </Canvas.Background>
            <Label x:Name="waitingLabel" Content="Waiting for IFConnect Server..." Canvas.Left="423" Canvas.Top="205" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="Segoe UI Semibold" Background="Transparent"/>
        </Canvas>

    </Canvas>


</Window>
